body:after {
  content: url(<%=asset_path 'lightbox/close.png'%>) url(<%=asset_path 'lightbox/loading.gif'%>) url(<%=asset_path 'lightbox/prev.png'%>) url(<%=asset_path 'lightbox/next.png'%>);
}
.lb-cancel {
  background: url(<%=asset_path 'lightbox/loading.gif'%>) no-repeat;
}
.lb-prev:hover {
  background: url(<%=asset_path 'lightbox/prev.png'%>) left 48% no-repeat;
}
.lb-next:hover {
  background: url(<%=asset_path 'lightbox/next.png'%>) right 48% no-repeat;
}
.lb-data .lb-close {
  background: url(<%=asset_path 'lightbox/close.png'%>) top right no-repeat;
}


